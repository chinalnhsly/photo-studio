{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/typings"],
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "mock/**/*",
    "typings/**/*",
    "tests/**/*",
    ".umirc.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "src/.umi/*",
    "webpack",
    "jest"
  ]
}
