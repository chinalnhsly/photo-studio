{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@tarojs/components/*": ["./node_modules/@tarojs/components/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "node",
      "jest",
      "webpack-env"
    ]
  },
  "include": [
    "src",
    "types",
    "node_modules/@tarojs/components/types/index.d.ts"
  ],
  "compileOnSave": false
}
